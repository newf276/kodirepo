<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1107">
	<defaultcontrol always="true">9000</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<width>600</width>
			<centertop>60%</centertop>
			<height>700</height>
			<include content="DialogBackgroundCommons">
				<param name="width" value="600" />
				<param name="height" value="80" />
				<param name="header_label" value="$LOCALIZE[137]" />
				<param name="header_id" value="" />
			</include>
			<control type="panel" id="9000">
				<include>ButtonMenuList</include>
				<content>
                    <item>
						<label>Search Finder</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick condition="System.AddonIsEnabled(plugin.video.finder)">ActivateWindow(10025,"plugin://plugin.video.finder/?iconImage=search&amp;mode=navigator.search&amp;name=Search",return)</onclick>
                        <onclick condition="System.HasAddon(plugin.video.finder) + !System.AddonIsEnabled(plugin.video.finder)">EnableAddon(plugin.video.finder)</onclick>
						<onclick condition="!System.HasAddon(plugin.video.finder)">InstallAddon(plugin.video.finder)</onclick>
					</item>
                    <item>
						<label>Reload Skin</label>
						<onclick>ReloadSkin()</onclick>
					</item>
                    <item>
						<label>Purge Databases</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick condition="System.AddonIsEnabled(plugin.program.cleaner)">ActivateWindow(10025,"plugin://plugin.program.cleaner/?mode=purgedb",return)</onclick>
                        <onclick condition="System.HasAddon(plugin.program.cleaner) + !System.AddonIsEnabled(plugin.program.cleaner)">EnableAddon(plugin.program.cleaner)</onclick>
						<onclick condition="!System.HasAddon(plugin.program.cleaner)">InstallAddon(plugin.program.cleaner)</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31145]</label>
						<onclick>Dialog.Close(all)</onclick><onclick>ActivateWindow(addonbrowser,addons://search/,return)</onclick>
					</item>
                    <item>
						<label>[COLOR yellow]Force Close Kodi[/COLOR]</label>
						<onclick>Dialog.Close(all)</onclick>
						<onclick condition="System.AddonIsEnabled(plugin.program.cleaner)">ActivateWindow(10025,"plugin://plugin.program.cleaner/?mode=forceclose")</onclick>
                        <onclick condition="System.HasAddon(plugin.program.cleaner) + !System.AddonIsEnabled(plugin.program.cleaner)">EnableAddon(plugin.program.cleaner)</onclick>
						<onclick condition="!System.HasAddon(plugin.program.cleaner)">InstallAddon(plugin.program.cleaner)</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>
