<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.iheart"
       name="[COLOR deepskyblue]iHeart[/COLOR] Radio"
       version="2.0.2"
       provider-name="newf276">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.22.0+matrix.1"/>
    <import addon="script.common.plugin.cache" version="2.6.1.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_US">Live radio over the internet</summary>
    <description lang="en_US">
    Listen to more than 1,500 live radio stations from coast-to-coast including pop, country, urban, rock, talk, and college.[CR]
    Browse radio stations by music genre and location.[CR]
    Read more: http://news.iheart.com/about/
    </description>
    <language>en_US</language>
    <license>GPL-2.0-or-later</license>
    <assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
